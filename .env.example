# Flask Configuration
FLASK_APP=api/server.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production
DATABASE_URL=sqlite:///database/lateral_entry.db

# Session Configuration
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Google OAuth Configuration (REQUIRED)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback

# Base URL (for OAuth redirects)
BASE_URL=http://localhost:5000

# Token Encryption Key (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
TOKEN_ENCRYPTION_KEY=your-fernet-encryption-key-here

# File Upload Configuration
UPLOAD_FOLDER=/var/www/lateral-entry/uploads
MAX_CONTENT_LENGTH=10485760  # 10MB in bytes
ALLOWED_PHOTO_EXTENSIONS=jpg,jpeg,png,webp
ALLOWED_DOCUMENT_EXTENSIONS=pdf

# Custom AI Model Configuration (OPTIONAL)
CUSTOM_AI_BASE_URL=https://your-ai-api.example.com
CUSTOM_AI_API_KEY=your-ai-api-key
CUSTOM_AI_MODEL=default

# Parallel AI Monitor Configuration (OPTIONAL)
PARALLEL_MONITOR_URL=https://parallel-ai-monitor.example.com
PARALLEL_MONITOR_API_KEY=your-parallel-ai-key

# LinkedIn OAuth Configuration (OPTIONAL - for real-time sync)
LINKEDIN_CLIENT_ID=your-linkedin-app-id
LINKEDIN_CLIENT_SECRET=your-linkedin-app-secret
LINKEDIN_REDIRECT_URI=http://localhost:5000/api/linkedin/callback

# Social Media API Keys (OPTIONAL)
TWITTER_API_KEY=your-twitter-key
TWITTER_API_SECRET=your-twitter-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-secret

# Email/SMTP Configuration (OPTIONAL)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@lateral-entry.gov.in

# Admin Configuration
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_NAME=System Administrator

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
